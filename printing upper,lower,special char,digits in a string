#include<stdio.h>
void string(char str[])
{
   int i=0,u=0,l=0,s=0,d=0;
   char upper[20],lower[20],special[20],digits[20];
   while(str[i]!='\0')
   {
       if(str[i]>='A' && str[i]<='Z' && str[i]!=' ')
       {
       upper[u++]=str[i];
       }
       else if(str[i]>='a' && str[i]<='z' && str[i]!=' ')
       {
       lower[l++]=str[i];
       }
       else if(str[i]>=48 && str[i]<=57)
       {
        digits[d++]=str[i];
       }
       else
       {
       special[s++]=str[i];
       }
       i++;
   }
   upper[u]='\0';
   lower[l]='\0';
   special[s]='\0';
   digits[d]='\0';
   printf("uppercase:%s\n",upper);
   printf("lowercase:%s\n",lower);
   printf("special case:%s\n",special);
   printf("digits:%s",digits);
}
int main()
{
    char str[100];
    printf("enter the string:");
    fgets(str,100,stdin);
    void (*fptr)(char[])=string;
    fptr(str);
    return 0;
}

output:
enter the string:RaghuVaran@2508
uppercase:RV
lowercase:aghuaran
special case:@
digits:2508
